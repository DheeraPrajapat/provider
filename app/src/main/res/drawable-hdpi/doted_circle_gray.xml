<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="0dp">

        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#d3d3d3"
                android:dashGap="7dp"
                android:dashWidth="15dp" />

            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>