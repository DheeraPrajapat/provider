<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <variable
            name="bean"
            type="com.marius.valeyou_admin.data.beans.CitiesModel" />

        <variable
            name="callback"
            type="com.marius.valeyou_admin.di.base.adapter.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <LinearLayout
        android:id="@+id/ll_states"
        android:onClick="@{v->callback.onItemClick(v,bean)}"
        android:layout_width="match_parent"
        android:padding="@dimen/dp10"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewStyleSubTitleRegular"
            android:padding="@dimen/dp5"
            android:text="@{bean.name}"
            android:drawablePadding="@dimen/dp10"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp12" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp7"
            android:layout_marginBottom="@dimen/dp7"
            android:background="@color/grey_light"/>


    </LinearLayout>

</layout>