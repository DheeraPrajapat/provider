<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.marius.valeyou_admin.ui.activity.notification.notificationdetails.NotificationDetailsActivityVM" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_gradient_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp150"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp100"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp100"
                android:rotation="-10"
                android:layout_marginStart="-50dp"
                android:layout_marginEnd="-50dp"
                />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp60"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            app:cardCornerRadius="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Job Title:"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text="Standard Pickup" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Location:"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text="Street Number 3 Arizona" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Date &amp; Time"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text="19-07-2020 4:30 PM" />

                </RelativeLayout>

                <TextView
                    style="@style/TextViewStyleSubTitleRegular"
                    android:text="Description:"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_centerVertical="true"
                    android:textColor="@color/grey"/>

                <TextView
                    style="@style/TextViewStyleSubTitleRegular"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                    android:layout_centerVertical="true"
                    android:textColor="@color/edit_text"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_one"
            style="@style/TextViewStyleSubTitleRegular"
            android:padding="@dimen/dp10"
            android:textSize="@dimen/sp14"
            android:text="Payment Information"
            android:layout_below="@+id/cv_top"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_below="@+id/tv_one"
            app:cardCornerRadius="@dimen/dp10"
            android:id="@+id/cv_two">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Price"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text="$200.80" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Service Fee"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text="$7.80" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Tip"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text="$20.00" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/grey_light"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="SUBTOTAL"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text="$228.60" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_margin="@dimen/dp10"
            android:layout_below="@+id/cv_two">

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp45"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                style="@style/RectangleButtonStyle"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:text="Chat"
                android:layout_margin="@dimen/dp10"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:foreground="?selectableItemBackground"
                android:textSize="@dimen/sp14" />

            <Button
                android:id="@+id/btn_decline"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp45"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                style="@style/RectangleButtonStyle"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:text="Decline"
                android:layout_margin="@dimen/dp10"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:foreground="?selectableItemBackground"
                android:textSize="@dimen/sp14" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp45"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                style="@style/RectangleButtonStyle"
                android:onClick="@{(v)->vm.onClick(v)}"
                android:text="Accept"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:layout_margin="@dimen/dp10"
                android:foreground="?selectableItemBackground"
                android:textSize="@dimen/sp14" />

        </LinearLayout>

        <include android:id="@+id/header"
            layout="@layout/toolbar_transparent"
            app:vm="@{vm}"/>

    </RelativeLayout>
</layout>