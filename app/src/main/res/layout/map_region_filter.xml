<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="com.marius.valeyou_admin.ui.fragment.home.HomeFragmentVM" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp30">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/et_state"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                style="@style/EditText_Regular"
                android:background="@drawable/edittext_skyblue_stroke"
                android:paddingStart="@dimen/dp10"
                android:paddingTop="@dimen/dp1"
                android:singleLine="true"
                android:onClick="@{v->vm.onClick(v)}"
                android:paddingBottom="@dimen/dp1"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp10"
                android:focusable="false"
                android:editable="false"
                android:hint="@string/select_state"
                android:textSize="@dimen/sp12" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/city_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                style="@style/EditText_Regular"
                android:background="@drawable/edittext_skyblue_stroke"
                android:paddingStart="@dimen/dp10"
                android:paddingTop="@dimen/dp1"
                android:singleLine="true"
                android:onClick="@{v->vm.onClick(v)}"
                android:paddingBottom="@dimen/dp1"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp10"
                android:focusable="false"
                android:editable="false"
                android:hint="@string/select_city"
                android:textSize="@dimen/sp12" />

        </FrameLayout>

    </LinearLayout>
</layout>