<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <variable
            name="bean"
            type="com.marius.valeyou_admin.data.beans.jobs.JobDetailModel.OrderActivitesBean" />

        <variable
            name="callback"
            type="com.marius.valeyou_admin.di.base.adapter.SimpleRecyclerViewAdapter.SimpleCallback" />
    </data>

    <LinearLayout
        android:onClick="@{v->callback.onItemClick(v,bean)}"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/colorPrimaryDark"/>

                <View
                    android:layout_width="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/grey"
                    android:layout_height="@dimen/dp40"/>


            </LinearLayout>

            <View
                android:layout_width="15dp"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/dp10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp15"
                    android:text='@{bean.message}'/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:time='@{bean.created_at+""}'
                    />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>