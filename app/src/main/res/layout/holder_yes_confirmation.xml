<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="callback"
            type="com.marius.valeyou_admin.di.base.dialog.BaseCustomDialog.Listener" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp30"
            app:cardCornerRadius="@dimen/dp10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:elevation="@dimen/dp2">

                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:src="@drawable/ic_cancel_icon"
                    android:onClick="@{v->callback.onViewClick(v)}"
                    android:layout_alignParentEnd="true" />


                <TextView
                    android:id="@+id/tv_two"
                    android:layout_below="@+id/iv_cancel"
                    android:layout_marginTop="@dimen/dp5"
                    style="@style/TextViewStyleSubTitleRegular"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/grey"
                    android:text="@string/are_you_sure_you_agree_with_the_reschedule_job"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dp5"
                    android:layout_below="@+id/tv_two"
                    android:layout_margin="@dimen/dp10"
                    android:visibility="gone"
                    android:elevation="@dimen/dp5">

                    <EditText
                        android:id="@+id/et_delete"
                        style="@style/EditText_Regular"
                        android:background="@android:color/transparent"
                        android:textColor="@color/grey"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/dp10"
                        android:hint=""/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_below="@+id/cv_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10">

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        style="@style/RectangleButtonStyle"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/dp5"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/cardview_light_background"
                        android:onClick="@{(v)->callback.onViewClick(v)}"
                        android:text="@string/no"
                        android:textSize="@dimen/sp14" />

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="center_vertical"
                        style="@style/RectangleButtonStyle"
                        android:onClick="@{(v)->callback.onViewClick(v)}"
                        android:text="@string/yes"
                        android:layout_margin="@dimen/dp5"
                        android:textColor="@color/white"
                        android:foreground="?selectableItemBackground"
                        android:backgroundTint="@color/colorPrimary"
                        android:textSize="@dimen/sp14" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>