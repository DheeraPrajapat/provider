<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.marius.valeyou_admin.ui.activity.dashboard.jobhistory.currentjob.jobdetailsone.JobDetailsOneActivityVM" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_gradient_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp150"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp100"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp100"
                android:rotation="-10"
                android:layout_marginStart="-50dp"
                android:layout_marginEnd="-50dp"
                />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp60"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            app:cardCornerRadius="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp20">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Payment Method"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text="Credit Card" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp5"
                    android:background="@color/divider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/dp5"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Sub Total"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text="$500.80" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp5"
                    android:background="@color/divider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/dp5"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:text="Processing Fees"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey"/>

                    <TextView
                        style="@style/TextViewStyleSubTitleRegular"
                        android:padding="@dimen/dp10"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/grey"
                        android:layout_alignParentEnd="true"
                        android:text="$100.00" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/divider"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp30"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_below="@+id/cv_top"
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp15"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_horizontal"
                style="@style/TextViewStyleSubTitleRegular"
                android:text="Grand Total"
                android:textSize="@dimen/sp16"/>

            <TextView
                android:layout_gravity="center_horizontal"
                style="@style/TextViewStyleSubTitleRegular"
                android:text="$600.80"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="@dimen/dp20">

                <TextView
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                   android:gravity="center"
                    android:background="@drawable/back_round_corner7"
                    style="@style/TextViewStyleTitleBold"
                    android:text="14"
                    android:textSize="@dimen/sp20"/>

                <TextView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp50"
                    android:gravity="center"
                    style="@style/TextViewStyleTitleBold"
                    android:text=":"
                    android:textSize="@dimen/sp20"/>

                <TextView
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:gravity="center"
                    android:background="@drawable/back_round_corner7"
                    style="@style/TextViewStyleTitleBold"
                    android:text="35"
                    android:textSize="@dimen/sp20"/>

                <TextView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp50"
                    android:gravity="center"
                    style="@style/TextViewStyleTitleBold"
                    android:text=":"
                    android:textSize="@dimen/sp20"/>

                <TextView
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:gravity="center"
                    android:background="@drawable/back_round_corner7"
                    style="@style/TextViewStyleTitleBold"
                    android:text="08"
                    android:textSize="@dimen/sp20"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_center"
            android:layout_height="@dimen/dp45"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            style="@style/RectangleButtonStyle"
            android:onClick="@{(v)->vm.onClick(v)}"
            android:text="Completed"
            android:layout_margin="@dimen/dp10"
            android:textColor="@color/white"
            android:foreground="?selectableItemBackground"
            android:textSize="@dimen/sp14" />

        <include android:id="@+id/header"
            layout="@layout/toolbar_transparent"
            app:vm="@{vm}"/>

    </RelativeLayout>
</layout>